// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  icon     String
}

model FoodType {
  id         Int      @id @default(autoincrement())
  name       String
  created_at DateTime @default(now()) @db.Timestamptz
  updated_at DateTime @updatedAt @db.Timestamptz
  food       Food[]
}

model Food {
  id           Int           @id @default(autoincrement())
  name         String
  food_type    FoodType      @relation(fields: [food_type_id], references: [id])
  food_type_id Int
  image        String
  description  String
  ingredients  String[]
  allergens    String[]
  preparation  String
  created_at   DateTime      @default(now()) @db.Timestamptz
  updated_at   DateTime      @updatedAt @db.Timestamptz
  FoodDetails  FoodDetails[]
}

model FoodDetails {
  id         Int      @id @default(autoincrement())
  name       String
  food       Food     @relation(fields: [food_id], references: [id])
  food_id    Int
  portion    String
  calories   Float
  created_at DateTime @default(now()) @db.Timestamptz
  updated_at DateTime @updatedAt @db.Timestamptz
}
